<div class="row">
  <div class="col-md-offset-4 col-md-4 col-md-offset-4 ">
     <div class="inner-login">
     <img src=<%= url_to_asset("HarvardLogo.svg.png") %> id="logo-login">
      <h2 id="login-h2">HarvardJobs</h2>
      
          <% flash.each do |key, value| %>
              <% if value.eql? " "%>

              <% else %>
                <div class="alert alert-danger">
                   <%= value %>
                </div>
              <% end %>
          <% end %>

        <%= form_tag users_path, :class => "form-horizontal" do %>
          <div class="field">
            <div class="form-group" id="email-label">
              <%= label_tag :email%>
              <%= email_field_tag :email, params[:email], autofocus: true, :class => "form-control"%>
            </div>
          </div>

          <div class="field">
            <div class="form-group">
              <%= label_tag :password %>
              <%= password_field_tag :password,params[:password], autocomplete: "off", :class => "form-control" %>
            </div>
          </div>
          <div class="actions">
            <%= submit_tag "Sign in", :class => "btn btn-primary" , :id => "btn-signin"%>
          </div>
        <% end %>
   </div>
  </div>
</div>